<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.javafx.samples.HelloController" hgap="10" vgap="10" gridLinesVisible="true">

    <columnConstraints>
        <ColumnConstraints percentWidth="50.0"/>
        <ColumnConstraints percentWidth="50.0"/>
    </columnConstraints>

    <Label fx:id="welcomeText" GridPane.rowIndex="0"/>
    <Label fx:id="secondText" GridPane.rowIndex="1"/>

    <Button text="Button 1" GridPane.rowIndex="2" GridPane.columnSpan="2" onAction="#onHelloButtonClick"/>
    <Button text="Button 2" GridPane.rowIndex="2" GridPane.columnIndex="1" onAction="#onHelloButtonClick"/>
    <Button text="Button 3" GridPane.rowIndex="3" GridPane.columnIndex="0" onAction="#onHelloButtonClick"/>
    <Button text="Button 4" GridPane.rowIndex="3" GridPane.columnIndex="1" onAction="#onHelloButtonClick"/>
    <Button text="Button 5" GridPane.rowIndex="4" GridPane.columnIndex="0" onAction="#onHelloButtonClick"/>
</GridPane>
